{
    "name": "aschmelyun/larametrics",
    "description": "Simple server-side analytics for your Laravel applications",
    "keywords": [
        "aschmelyun",
        "laravel",
        "larametrics",
        "laravel-notifications",
        "laravel-analytics",
        "analytics",
        "server-side",
        "self-hosted"
    ],
    "homepage": "https://github.com/aschmelyun/larametrics",
    "license": "MIT",
    "authors": [
        {
            "name": "Andrew Schmelyun",
            "email": "me@aschmelyun.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "spatie/laravel-package-tools": "^1.14.0",
        "illuminate/contracts": "^9.0"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^6.0",
        "orchestra/testbench": "^7.0",
        "pestphp/pest": "^1.21",
        "pestphp/pest-plugin-laravel": "^1.1",
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "Aschmelyun\\Larametrics\\": "src",
            "Aschmelyun\\Larametrics\\Database\\Factories\\": "database/factories"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Aschmelyun\\Larametrics\\Tests\\": "tests"
        }
    },
    "scripts": {
        "post-autoload-dump": "@php ./vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Aschmelyun\\Larametrics\\LarametricsServiceProvider"
            ],
            "aliases": {
                "Larametrics": "Aschmelyun\\Larametrics\\Facades\\Larametrics"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}